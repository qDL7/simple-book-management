{% extends 'base.html.twig' %}

{% block title %}Category{% endblock %}

{% block body %}
    <div class="row mt-2">
        <div class="col">
            <h1>Category</h1>
        </div>
    </div>
    <div>
        <div class="row p-2">
            <div class="col-2">Id</div>
            <div class="col-10">Name</div>
        </div>
        <div class="row p-2">
            <div class="col-2">{{ category.id }}</div>
            <div class="col-10">{{ category.name }}</div>
        </div>
    </div>

    <div class="row mt-2">
        <a href="{{ path('category_list') }}">
            <button class="btn btn-secondary">Back to list</button>
        </a>
        {{ include('_delete_form.html.twig', {'id': category.id, 'delete_route_name': 'category_delete'}) }}
    </div>
{% endblock %}
